<!DOCTYPE html>
<head>
    <title>ShareTea Restock</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <nav id="navbar" class="navbar" style="padding: 10px 10px;">
        <div style="display: flex; flex-direction: row; align-items: center;">
            <a href="/manager" style="margin-left: 10px; margin-right: 20px;"><img src="/img/management/arrow-left.png" class="back-arrow"></a>
            <div>
                <p1 style="font-weight: 500;">Managers</p1>
                <h1 style="font-size: 50px; font-weight: 600; margin-top: -15px;">Restock</h1>
            </div>
            
        </div>
        <ul class="nav-links">
            <li><a href="javascript:void(0)" onclick="openRestockBox()" style="display: flex; align-items: center; gap: 8px; text-decoration: none; color: black;">
                <img src="/img/management/stock-rotation.png" style="height: 40px;">
                Restock Low Ingredients
            </a></li>
        </ul>
    </nav>

    <!-- Modal backdrop -->
    <div class="modal" id="restock-modal">
        <!-- Modal box -->
        <div id="modal-box">
            <h3 style="margin-bottom: 16px;">Restock Low Ingredients</h3>

            <div style="display: flex; justify-content: center; gap: 16px; margin-top: 20px;">
                <button onclick="restockIngredients()" style="padding: 8px 16px; border: none; background: #d9534f; color: white; border-radius: 6px; cursor: pointer;">
                    Restock All
                </button>
                <button onclick="closeRestockBox()" style="padding: 8px 16px; border: 1px solid #ccc; background: white; border-radius: 6px; cursor: pointer;">
                    Cancel
                </button>
            </div>
        </div>
    </div>


    <section>
        <div class="left">
            <div class="tableContainer">
                <table class="myTable" id="myTable">
                    <!-- <caption>Inventory (Ingredient Counts)</caption> -->
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ingredient</th>
                            <th>Amount</th>
                            <th>Minimum Stock</th>
                            <th>Full Stock</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(ingredient => { %>
                            <tr>
                                <td><%= ingredient.ingredient_id %></td>
                                <td><%= ingredient.ingredient_name %></td>
                                <td><%= ingredient.quantity %></td>
                                <td><%= ingredient.minimum_quantity %></td>
                                <td><%= ingredient.full_quantity %></td>
                                <td><%= ingredient.ingredient_unit %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script type="module" src="/langSelect.js"></script>
    <script src="/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/restock.js"></script>
</body> 