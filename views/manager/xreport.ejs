<!DOCTYPE html>
<html lang="en">
    <head>
        <title>ShareTea Inventory</title>
        <link rel="stylesheet" href="/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    </head>
<body>
    <nav id="navbar" class="navbar" style="padding: 10px 10px;">
        <div style="display: flex; flex-direction: row; align-items: center;">
            <a href="/manager" style="margin-left: 10px; margin-right: 20px;"><img src="/img/management/arrow-left.png" class="back-arrow"></a>
            <div>
                <p1 style="font-weight: 500;">Managers</p1>
                <h1 style="font-size: 50px; font-weight: 600; margin-top: -15px;">X-Report</h1>
            </div>
            
        </div>
        
        <ul class = "nav-links">
            <li class="weather-dropdown">
                <button class="weather-btn" id="weatherBtn" aria-expanded="false" aria-controls="weatherPanel">
                    <img src="/weather.png" alt="Weather" class="weather-btn__img">
                </button>
        
                <div id="weatherPanel" class="weather-panel" role="region" aria-label="Weather and recommendation">
                    <div id="weatherContent" class="weather-content">
                    <div class="weather-header">
                        <div id="wxIcon" class="weather-icon"></div>
                        <div class="weather-meta">
                        <div id="wxCity" class="weather-city">—</div>
                        <div class="weather-line"><span id="wxTemp">—</span> · <span id="wxCond">—</span></div>
                        </div>
                    </div>
                    <div class="weather-reco">
                        <div class="weather-reco__title">Recommended drink</div>
                        <div id="wxDrink" class="weather-reco__text">—</div>
                    </div>
                    </div>
                </div>

            <li>
                <button class="speaker-btn" id="textToSpeechBtn">
                    <img src="/Muted.png" alt="Text-to-Speech" class="TextToSpeech-img" id="speakerImg">
                </button>
            </li>
            <li class="lang-dropdown no-translate">
                <button class="translate-btn" id="translateBtn">
                    <img src="/Translate.png" alt="Translate" class="Translate-img" id="translateImg">
                </button>
                <div id="langMenu" class="lang-menu hidden">
                    <select id="langSel" aria-label="Select language">
                      <option value="en" selected>English</option>
                      <option value="zh">中文</option>
                      <option value="es">Español</option>
                      <option value="fr">Français</option>
                      <option value="ja">日本語</option>
                    </select>
                </div>
            </li>



        </ul>

    </nav>

    <main class="xreport-layout">
        <!-- 1. Summary -->
        <section class="card">
          <h2>Summary</h2>
          <table class="myTable">
            <tr><th>Orders</th><td><%= summary.orders %></td></tr>
            <tr><th>Gross Sales</th><td>$<%= summary.gross_sales %></td></tr>
            <tr><th>Average Ticket</th><td>$<%= summary.avg_ticket %></td></tr>
          </table>
        </section>
    
        <!-- 2. Top Products -->
        <section class="card">
          <h2>Top Items</h2>
          <table class="myTable">
            <thead>
              <tr><th>#</th><th>Item</th><th>Qty Sold</th></tr>
            </thead>
            <tbody>
              <% products.forEach((row, idx) => { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= row.product_name %></td>
                  <td><%= row.qty_sold %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </section>
    
        <!-- 3. Per Hour -->
        <section class="card">
          <h2>Per Hour</h2>
          <table class="myTable">
            <thead>
              <tr><th>Hour</th><th>Orders</th><th>Gross Sales</th></tr>
            </thead>
            <tbody>
              <% perHour.forEach(row => { %>
                <tr>
                  <td><%= row.per_hour %>:00</td>
                  <td><%= row.orders %></td>
                  <td>$<%= row.gross_sales %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </section>
    
        <!-- 4. By Category -->
        <section class="card">
          <h2>By Category</h2>
          <table class="myTable">
            <thead>
              <tr><th>Category</th><th>Qty Sold</th><th>Sales</th></tr>
            </thead>
            <tbody>
              <% categories.forEach(row => { %>
                <tr>
                  <td><%= row.category_name %></td>
                  <td><%= row.qty_sold %></td>
                  <td>$<%= row.sales %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </section>
      </main>


    <script src="/index.js"></script>
    <script src="/tts.js"></script>
    <script src="/accountDropdown.js"></script>
    <script src="/weather.js"></script>
</body>
</html>