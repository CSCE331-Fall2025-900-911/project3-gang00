<!DOCTYPE html>
<head>
    <title>ShareTea Reports</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <nav id="navbar" class="navbar" style="padding: 10px 10px;">
        <div style="display: flex; flex-direction: row; align-items: center;">
            <a href="/manager" style="margin-left: 10px; margin-right: 20px;">
                <img src="/img/management/arrow-left.png" class="back-arrow" alt="Back">
            </a>
            <div>
                <p1 style="font-weight: 500;">Managers</p1>
                <h1 style="font-size: 50px; font-weight: 600; margin-top: -15px;">Reports</h1>
            </div>
        </div>
        <div class="reports-status" id="reportsStatus">Loading latest data…</div>
    </nav>

    <main class="reports-layout">
        <section class="report-controls">
            <div class="form-group">
                <label for="startDate">Start Date</label>
                <input type="date" id="startDate" value="<%= defaultRange.start %>">
            </div>
            <div class="form-group">
                <label for="endDate">End Date</label>
                <input type="date" id="endDate" value="<%= defaultRange.end %>">
            </div>
            <button id="refreshReports" class="primary" type="button">Refresh</button>
        </section>

        <section class="report-summary-grid">
            <div class="summary-card">
                <p>Total Sales</p>
                <h2 id="totalSales">$0.00</h2>
            </div>
            <div class="summary-card">
                <p>Orders</p>
                <h2 id="orderCount">0</h2>
            </div>
            <div class="summary-card">
                <p>Average Order</p>
                <h2 id="averageOrder">$0.00</h2>
            </div>
        </section>

        <section class="charts-grid">
            <div class="chart-card">
                <div class="chart-card__header">
                    <h3>Revenue by Day</h3>
                </div>
                <canvas id="revenueChart" height="240" aria-label="Revenue by day"></canvas>
            </div>
            <div class="chart-card">
                <div class="chart-card__header">
                    <h3>Category Breakdown</h3>
                </div>
                <canvas id="categoryChart" height="240" aria-label="Revenue by category"></canvas>
            </div>
        </section>

        <section class="tables-grid">
            <div class="table-card">
                <div class="chart-card__header">
                    <h3>Top Products</h3>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Units Sold</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tbody id="topProductsBody">
                        <tr><td colspan="3">Fetching data…</td></tr>
                    </tbody>
                </table>
            </div>
            <div class="table-card">
                <div class="chart-card__header">
                    <h3>Recent Orders</h3>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Total</th>
                            <th>Placed</th>
                        </tr>
                    </thead>
                    <tbody id="recentOrdersBody">
                        <tr><td colspan="3">Fetching data…</td></tr>
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <script type="module" src="/langSelect.js"></script>
    <script src="/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/reports.js"></script>
</body>
</html>
