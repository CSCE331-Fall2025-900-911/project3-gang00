<!DOCTYPE html>
<head>
    <title>ShareTea Inbox</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <nav id="navbar" class="navbar" style="padding: 10px 10px;">
        <div style="display: flex; flex-direction: row; align-items: center;">
            <a href="/manager" style="margin-left: 10px; margin-right: 20px;"><img src="/img/management/arrow-left.png" class="back-arrow"></a>
            <div>
                <p1 style="font-weight: 500;">Managers</p1>
                <h1 style="font-size: 50px; font-weight: 600; margin-top: -15px;">Inbox</h1>
            </div>
        </div>
    </nav>

    <!--Render from data-->
    <section style="display: flex; height: inherit;">
        <div class="left">
            <div class="tableContainer">
                <table class="myTable" id="myTable">
                    <!-- <caption>Inbox</caption> -->
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(message => { %>
                            <tr>
                                <td><%= message.name %></td>
                                <td><%= message.email %></td>
                                <td><%= message.message %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</body>