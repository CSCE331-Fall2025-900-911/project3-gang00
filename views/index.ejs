<!DOCTYPE html>
<head>
  <title>ShareTea Kiosk</title>
  <link rel="stylesheet" href="styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
  <nav class="navbar" style="padding: 10px;">
    <div style="display: flex; flex-direction: row; align-items: center;">
        <% if (user) { %>
            <a href="javascript:void(0)" onclick="openLogoutModal()">
                <img src="/img/management/arrow-left.png" class="back-arrow">
            </a>
        <% } else { %>
            <a href="/" style="margin-left: 10px; margin-right: 20px;"><img src="/img/management/arrow-left.png" class="back-arrow"></a>
        <% } %>
        <div>
            <p1 style="font-weight: 500;">ShareTea</p1>
            <h1 style="font-size: 50px; font-weight: 600; margin-top: -15px;">Kiosk</h1>
        </div>
        
    </div>
    <ul class="nav-links">
        <li><a href="/menu">Menu</a></li>
        <li><a href="/help">Help</a></li>

        <% if (user) { %>
            <li style="position: relative;">
                <a href="javascript:void(0)" onclick="toggleAccountDropDown()" style="display: flex; align-items: center; gap: 8px;">
                    <img src="/user.png" style="height: 40px;">
                    <%= user.customer_name %>
                </a>

                <!-- Dropdown menu -->
                <ul id="account-dropdown" style="position: absolute; top: 100%; left: 0; display: none; width: 100%;">
                    <li><a href="javascript:void(0)" onclick="viewAccount()" style="display: block; padding: 8px 16px; text-decoration: none; color: black;">View Account</a></li>
                    <li><a href="javascript:void(0)" onclick="openLogoutModal()" style="display: block; padding: 8px 16px; text-decoration: none; color: black;">Sign out</a></li>
                </ul>
            </li>
        <% } else { %>
            <li><a href="/customer-sign-in">Sign in</a></li>
        <% } %>

        <li class="weather-dropdown">
        <button class="weather-btn" id="weatherBtn" aria-expanded="false" aria-controls="weatherPanel">
            <img src="/weather.png" alt="Weather" class="weather-btn__img">
        </button>

        <div id="weatherPanel" class="weather-panel" role="region" aria-label="Weather and recommendation">
            <div id="weatherContent" class="weather-content">
            <div class="weather-header">
                <div id="wxIcon" class="weather-icon"></div>
                <div class="weather-meta">
                <div id="wxCity" class="weather-city">—</div>
                <div class="weather-line"><span id="wxTemp">—</span> · <span id="wxCond">—</span></div>
                </div>
            </div>
            <div class="weather-reco">
                <div class="weather-reco__title">Recommended drink</div>
                <div id="wxDrink" class="weather-reco__text">—</div>
            </div>
            </div>
        </div>
        </li>

        <li>
            <button class="speaker-btn" id="textToSpeechBtn">
                <img src="/Muted.png" alt="Text-to-Speech" class="TextToSpeech-img" id="speakerImg">
            </button>
            <!-- Does tts need the language dropdown list to choose a language? -->
            <!-- <div id="langMenu" class="lang-menu hidden">
                <select id="langSel" aria-label="Select language">
                    <option value="en" selected>English</option>
                    <option value="zh">中文</option>
                    <option value="es">Español</option>
                    <option value="fr">Français</option>
                    <option value="ja">日本語</option>
                </select>
            </div> -->
        </li>
        <li class="lang-dropdown no-translate">
            <button class="translate-btn" id="translateBtn">
                <img src="/Translate.png" alt="Translate" class="Translate-img" id="translateImg">
            </button>
            <div id="langMenu" class="lang-menu hidden">
                <select id="langSel" aria-label="Select language">
                    <option value="en" selected>English</option>
                    <option value="zh">中文</option>
                    <option value="es">Español</option>
                    <option value="fr">Français</option>
                    <option value="ja">日本語</option>
                </select>
            </div>
        </li>
      </ul>
  </nav>

  <%- include('partials/logoutModal') %>

  <main class="center-container">
    <a href="/menu" class="menu-button">View Menu</a>
    <a href="/order" class="menu-button">Start Order</a>
  </main>
</body>
<script type="module" src="/langSelect.js"></script>
<script src="/index.js"></script>
<script src="/tts.js"></script>
<script src="/accountDropdown.js"></script>
<script src="/weather.js"></script>
</html>
