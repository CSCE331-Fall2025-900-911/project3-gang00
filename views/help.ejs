<!DOCTYPE html>
<head>
    <title>Help</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body>
    <div>
        <nav class="navbar" style="padding: 10px;">
            <div style="display: flex; flex-direction: row; align-items: center;">
                <a href="/kiosk" style="margin-left: 10px; margin-right: 20px;"><img src="/img/management/arrow-left.png" class="back-arrow"></a>
                <div>
                    <p1 style="font-weight: 500;">Kiosk</p1>
                    <h1 style="font-size: 50px; font-weight: 600; margin-top: -15px;">Help</h1>
                </div>
                
            </div>
            <ul class="nav-links">
                <li>
                    <button class="speaker-btn" id="textToSpeechBtn">
                        <img src="/Muted.png" alt="Text-to-Speech" class="TextToSpeech-img" id="speakerImg">
                    </button>
                </li>
                <li class="lang-dropdown no-translate">
                    <button class="translate-btn" id="translateBtn">
                        <img src="/Translate.png" alt="Translate" class="Translate-img" id="translateImg">
                    </button>
                    <div id="langMenu" class="lang-menu hidden">
                        <select id="langSel" aria-label="Select language">
                            <option value="en" selected>English</option>
                            <option value="zh">中文</option>
                            <option value="es">Español</option>
                            <option value="fr">Français</option>
                            <option value="ja">日本語</option>
                        </select>
                    </div>
                </li>
            </ul>
        </nav>
    </div>
    <div class="contactUs">
        <h1>Help Page</h1>
    </div>

    <!--Start of FAQ section -->
    <main>
        <section class ="contactUs">
            <h2>Frequently Asked Questions</h2>
            <div class="contactUs">
                <div id="faqList">
                    <% faqs.forEach((item, i) => { %>
                    <details class="faq">
                        <summary style="cursor: pointer;">
                            <%= item.q %>
                        </summary>
                        <div class="muted">
                            <%= item.a %>
                        </div>
                    </details>
                    <% }) %>
                </div>
            </div>
        </section>

        <!--Contact Us Section-->
        <section class ="contactUs">
        <h2>Contact Us</h2>
        <div class="contactUs">

            <% if (typeof submitted !== 'undefined' && submitted) { %>
                <div class="flash success">Message sent. We'll get back to you soon.</div>
            <% } %>

            <div><strong>Email:</strong> <a href="mailto:<%= site.supportEmail %>"><%= site.supportEmail %></a></div>
            <div><strong>Phone:</strong> <a href="tel:+15551234567"><%= site.supportPhone %></a></div>
            <div><strong>Support Hours:</strong> <%= site.supportHours %></div>
            <div><strong>Address: </strong><%= site.address%></div>

            <br />

            <form action="/contact" method="POST" class="contactGrid">

            <!-- Get the user input here and return to the database -->
            <input type="text" name="name" placeholder="Your name" required />
            <input type="email" name="email" placeholder="Your email" required />
            <textarea name="message" placeholder="How can we help?" rows="4" required></textarea>
            <button type="submit">Send Message</button>

            </form>
        </div>
          
        </section>

    </main>

    <script type="module" src="/langSelect.js"></script>
    <script src="/index.js"></script>
    <script src="/accountDropdown.js"></script>
    <script src="/weather.js"></script>
    <script src="/tts.js"></script>
</body>