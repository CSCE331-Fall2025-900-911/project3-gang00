<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Menu</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  <style>
    .menu-container { max-width: 1000px; margin: 24px auto; padding: 0 16px; }
    .menu-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 16px; }
    .card { border: 1px solid #e5e7eb; border-radius: 12px; padding: 12px; background: #fff; }
    .card img { width: 100%; height: 160px; object-fit: cover; border-radius: 10px; }
    .card h3 { margin: 10px 0 6px; font-size: 18px; }
    .price { font-weight: 600; }
    .tags { font-size: 12px; color: #555; }
    .add-btn { width: 100%; padding: 10px; border-radius: 10px; border: 1px solid #111; background: #111; color: #fff; cursor: pointer; }
    .add-btn:focus { outline: 3px solid #3b82f6; outline-offset: 2px; }
    .toolbar { display:flex; justify-content: space-between; align-items: center; margin-bottom: 12px; }
    body.hc { background:#000; color:#fff; }
    body.hc .card { background:#111; border-color:#333; }
    body.hc .add-btn { background:#fff; color:#000; border-color:#fff; }
  </style>
</head>
<body>

  <main class="menu-container">
    <div class="toolbar" role="region" aria-label="Menu controls">
      <h1>Menu</h1>
      <div>
        <button id="fontUp"  type="button" aria-label="Increase font size">A+</button>
        <button id="fontDown" type="button" aria-label="Decrease font size">A−</button>
        <button id="contrast" type="button" aria-label="Toggle high contrast">High Contrast</button>
      </div>
    </div>

    <section class="menu-grid" aria-label="Drinks list">
      <% items.forEach(item => { %>
        <article class="card" tabindex="0" aria-labelledby="title-<%= item.id %>">
          <img src="<%= item.img %>" alt="<%= item.name %>" />
          <h3 id="title-<%= item.id %>"><%= item.name %></h3>
          <div class="tags"><%= item.tags.join(' · ') %> · <%= item.calories %> cal</div>
          <p class="price"><%= parseFloat(item.price).toFixed(2) %> $</p>
          <button class="add-btn" type="button" data-id="<%= item.id %>">Add</button>
        </article>
      <% }) %>
    </section>
  </main>

  <script>
    const root = document.documentElement;
    let base = 16;
    document.getElementById('fontUp').onclick   = () => { base = Math.min(base + 1, 22); root.style.fontSize = base + 'px'; };
    document.getElementById('fontDown').onclick = () => { base = Math.max(base - 1, 14); root.style.fontSize = base + 'px'; };
    document.getElementById('contrast').onclick = () => document.body.classList.toggle('hc');

    document.querySelectorAll('.add-btn').forEach(btn => {
      btn.addEventListener('click', () => alert('Added to order (sample)'));
    });
  </script>
  <a href="/" class="cancel-order">Back to Index</a>
</body>
</html>
